{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "api",
    "rootDir": "api",
    "declaration": false,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}